<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.exploritage">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.DesignDemo">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"></activity>

        <service
            android:name=".service.SaveImageOnExternalStorageService"
            android:exported="true" />

        <activity
            android:name=".activity.CityDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.HowToUseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.PlacesToVisitActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SiteDescriptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.FeedbackActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SiteMapActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SubsiteMapActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="c8ff506a35f986b3081a09ab3a8e79db64bab455" />

        <service
            android:name=".service.DownloadTextService"
            android:exported="true"></service>
    </application>

</manifest>