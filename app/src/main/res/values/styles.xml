<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayoutTheme" parent="Base.Theme.AppCompat">

        <item name="colorAccent">@color/white</item>

    </style>

    <style name="style_tab_icons">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
    </style>

    <style name="style_title_text" parent="match_wrap">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">16dp</item>

    </style>

    <style name="style_horizontal_line" parent="match_wrap">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="style_heading_text" parent="wrap_wrap">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_16dp</item>
        <item name="android:textColor">@color/color_light_green</item>
    </style>

    <style name="style_description_note" parent="wrap_wrap">
        <item name="android:layout_marginTop">@dimen/margin_10dp</item>
    </style>

    <style name="lay_description" parent="match_wrap">
        <item name="android:padding">8dp</item>
    </style>

    <style name="style_drop_down_icon" parent="wrap_wrap">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="title_text" parent="wrap_wrap">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/margin_20dp</item>
    </style>

    <style name="subtitle_text" parent="match_wrap">

        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">36dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16dp</item>

    </style>

    <style name="style_btn_post" parent="wrap_wrap">

        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/color_light_green</item>
    </style>

    <style name="style_tv_time" parent="wrap_wrap">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="progress">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:indeterminateTint" tools:targetApi="lollipop">@color/color_light_green
        </item>
        <item name="android:tint">@color/color_light_green</item>
        <item name="android:progressBackgroundTint" tools:targetApi="lollipop">
            @color/color_light_green
        </item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16dp</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="rl_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>


    </style>

    <style name="tv_header" parent="match_wrap">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/dark_grey</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="tabSelectedTextColor">@color/dark_grey</item>
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
    </style>


    <style name="et_style" parent="match_wrap">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="btn_style" parent="match_wrap">
        <item name="android:background">@mipmap/wireframes_final_29</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_style" parent="match_wrap">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginTop">@dimen/margin_12dp</item>
    </style>

    <style name="tv_style_white" parent="match_wrap">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>

    </style>

    <style name="tv_style_different_text_size" parent="tv_style_white">

        <item name="android:textSize">14dp</item>
        </style>



    <style name="tv_style_white_height_match" parent="match_match">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>

    </style>




    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="android:isIndicator">false</item>
        <item name="android:numStars">5</item>

        <item name="android:rating">5</item>
    </style>

    <style name="layout_root_background_black" parent="match_match">
        <item name="android:background">@color/black</item>

        <item name="android:padding">10dp</item>

    </style>


    <style name="TextInputLayoutStyle" parent="match_wrap">

    </style>


    <style name="ll_bg_white" parent="match_wrap">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="tv_style_black" parent="match_wrap">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>



    <style name="button_dialog_buy" parent="wrap_wrap">
        <item name="android:textSize">22dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom</item>
    </style>


    <style name="ll_dialog_bg_grey" parent="match_wrap">
        <item name="android:background">#d3d3d3</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">16dp</item>

    </style>

    <style name="button_black_shape" parent="match_wrap">
        <item name="android:textColor">@color/boundary_orange</item>
        <item name="android:layout_weight">5</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12dp</item>
        <item name="android:background">@mipmap/wireframes_final_33</item>

    </style>

    <style name="et_dialog_package" parent="et_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">26dp</item>
        <item name="android:paddingBottom">18dp</item>

    </style>


    <style name="button_share_grey" parent="wrap_wrap">
        <item name="android:textSize">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/et_gray</item>
        <item name="android:layout_margin">@dimen/margin_18dp</item>
        <item name="android:layout_weight">4</item>
    </style>


    <style name="tv_heading" parent="match_wrap">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="tv_heading_without_background" parent="match_wrap">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
    </style>


    <style name="image_star_rating_bar">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:src">@drawable/star_white</item>
    </style>

    <style name="view_grey_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dark_gray</item>
        <item name="android:layout_marginTop">@dimen/margin_4dp</item>
    </style>


    <style name="rl_style_with_padding" parent="match_wrap">
        <item name="android:padding">16dp</item>
    </style>




    <style name="custom_rating_style" parent="wrap_wrap">
        <item name="rating">4</item>
        <item name="starSize">12dp</item>
    </style>
    <style name="custom_rating_style_size_greater" parent="match_wrap">
        <item name="rating">3</item>
        <item name="starSize">20dp</item>
        <item name="android:layout_marginTop">@dimen/margin_12dp</item>
</style>
