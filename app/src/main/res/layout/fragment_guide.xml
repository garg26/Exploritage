<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/match_match"
    android:background="@color/grey">


    <RelativeLayout
        android:id="@+id/lay_video_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lay_download"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/margin_12dp">

        <RelativeLayout
            android:id="@+id/lay_subsite_image_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:padding="0dp">

            <ImageView
                android:id="@+id/iv_subsite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:scaleType="centerCrop"
                android:src="@color/black" />

            <RelativeLayout
                android:id="@+id/lay_play_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/iv_play_pause"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_play"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_pause"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_pause"
                    android:visibility="invisible" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_seekbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/color_light_green"
            android:padding="0dp">


            <TextView
                android:id="@+id/tv_start_time"
                style="@style/style_tv_time"
                android:layout_marginRight="0dp"
                android:text="00:00" />

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@+id/tv_end_time"
                android:layout_toRightOf="@+id/tv_start_time"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:progressDrawable="@drawable/custom_seekbar"
                android:thumb="@drawable/thumb" />

            <TextView
                android:id="@+id/tv_end_time"
                style="@style/style_tv_time"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:text="00:00" />

        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/lay_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:background="@drawable/lay_rectangle_bg"
        android:padding="8dp">


        <simplifii.framework.widgets.CustomFontTextView
            android:id="@+id/tv_downloading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Download"
            android:textSize="16dp" />

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_download"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:src="@mipmap/ic_download"
            android:visibility="visible" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lay_view_container"
        style="@style/match_wrap"
        android:layout_below="@+id/lay_download"
        android:orientation="vertical">

        <!--<include layout="@layout/view_row_history" />-->

    </LinearLayout>

</RelativeLayout>