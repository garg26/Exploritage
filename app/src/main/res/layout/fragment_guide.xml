<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_match"
    android:background="@color/dark_grey"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lay_subsite_image_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_subsite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:scaleType="centerCrop"
            android:src="@color/black" />

        <ImageView
            android:id="@+id/iv_download"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_above="@+id/lay_seekbar_container"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/download" />


        <RelativeLayout
            android:id="@+id/lay_seekbar_container"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            >

            <ImageView
                android:id="@+id/iv_play_pause"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/play_circle_white" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_8dp"
                android:layout_toRightOf="@+id/iv_play_pause"
                android:background="@color/black_transparent">

                <TextView
                    android:id="@+id/tv_start_time"
                    style="@style/style_tv_time"
                    android:layout_marginRight="0dp"
                    android:text="00:00" />

                <SeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_toLeftOf="@+id/tv_end_time"
                    android:layout_toRightOf="@+id/tv_start_time"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:progressDrawable="@drawable/custom_seekbar"
                    android:thumb="@drawable/thumb" />

                <TextView
                    android:id="@+id/tv_end_time"
                    style="@style/style_tv_time"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:text="00:00" />
            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lay_view_container"
        style="@style/match_wrap"
        android:orientation="vertical">


    </LinearLayout>

</RelativeLayout>