<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout style="@style/match_match">

        <android.support.v7.widget.Toolbar
            style="@style/toolbar"
            android:layout_gravity="center_horizontal"
            android:background="@color/color_light_green"
            android:gravity="center_horizontal"
            android:paddingRight="@dimen/margin_16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <simplifii.framework.widgets.CustomFontTextView
                    android:id="@+id/tv_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <simplifii.framework.widgets.CustomFontTextView
                    android:id="@+id/tv_toolbar_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <!--     <View
                 android:id="@+id/view_line"
                 style="@style/style_horizontal_line"
                 android:layout_below="@+id/toolbar" />-->

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tab_layout"
            android:layout_below="@+id/toolbar">

        </FrameLayout>


        <LinearLayout
            android:id="@+id/tab_layout"
            style="@style/match_wrap"
            android:layout_alignParentBottom="true"
            android:background="@color/color_light_green"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                style="@style/style_tab_icons"
                android:src="@mipmap/ic_home" />

            <ImageView
                style="@style/style_tab_icons"
                android:src="@mipmap/ic_search" />

            <ImageView
                style="@style/style_tab_icons"
                android:src="@mipmap/ic_heart" />

            <ImageView
                style="@style/style_tab_icons"
                android:src="@mipmap/ic_bell" />

        </LinearLayout>

    </RelativeLayout>


    <!--  <ScrollView
          android:scrollbars="none"
          android:layout_width="250dp"
          android:layout_height="match_parent"
         >
  -->
    <RelativeLayout
        android:id="@+id/lay_navigation"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/color_light_green">

        <ImageView
            android:id="@+id/iv_exploritage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_icon" />

        <simplifii.framework.widgets.CustomFontTextView
            android:id="@+id/tv_nav_title"
            style="@style/title_text"
            android:layout_below="@+id/iv_exploritage"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/welcome_to_exploritage" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_nav_title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/white" />
        <!-- <simplifii.framework.widgets.CustomFontTextView
             android:id="@+id/tv_home"
             style="@style/subtitle_text"
             android:layout_below="@id/tv_nav_title"
             android:layout_marginTop="@dimen/margin_20"
             android:text="@string/home" />-->

        <simplifii.framework.widgets.CustomFontTextView
            android:id="@+id/tv_about"
            style="@style/subtitle_text"
            android:layout_below="@id/tv_nav_title"
            android:layout_marginTop="@dimen/margin_20"
            android:text="@string/about_exploritage" />


        <simplifii.framework.widgets.CustomFontTextView
            android:id="@+id/tv_how_to_use"
            style="@style/subtitle_text"
            android:layout_below="@id/tv_about"
            android:text="@string/how_to_use" />

        <simplifii.framework.widgets.CustomFontTextView
            android:id="@+id/tv_feedback"
            style="@style/subtitle_text"
            android:layout_below="@id/tv_how_to_use"
            android:text="@string/feedback" />

        <simplifii.framework.widgets.CustomFontTextView
            android:id="@+id/tv_share_app"
            style="@style/subtitle_text"
            android:layout_below="@id/tv_feedback"
            android:text="@string/shareapp" />


    </RelativeLayout>

    <!--</ScrollView>-->


</android.support.v4.widget.DrawerLayout>
